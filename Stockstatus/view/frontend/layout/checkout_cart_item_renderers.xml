                    <item name="downloadable" xsi:type="string">Web4pro_Stockstatus::cart/item/default.phtml</item>
                    <item name="configurable" xsi:type="string">Web4pro_Stockstatus::cart/item/default.phtml</item>
                    <item name="grouped" xsi:type="string">Web4pro_Stockstatus::cart/item/default.phtml</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
